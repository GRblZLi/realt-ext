{
  "manifest_version": 2,
  "name": "Realt Me",
  "version": "1.0",

  "icons": {
    "16": "assets/img/icon-16.png",
    "48": "assets/img/icon-48.png",
    "128": "assets/img/icon-128.png"
  },
  "background": {
    "scripts": ["assets/js/lib/jquery.min.js","assets/js/background.js"]
  },
  "permissions": [
    "http://mogilev.irr.by/*",
    "http://olx.by/*",
    "http://kufar.by/*"
  ],

  "browser_action": {
    "default_title": "Realt Me",
    "default_icon": "assets/img/icon-16.png",
    "default_popup": "popup.html"
  }

}